<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/anhsp" />

            <TextView
                android:id="@+id/txt_infomation_shop"
                android:layout_width="match_parent"
                android:textColor="@color/pumpkin"
                android:layout_height="25dp"
                android:text="Shop: CoCoShop"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_text_view_review"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:text="Vị trí"
                android:textColor="@color/pumpkin"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textColor="@color/pumpkin"
                android:layout_height="25dp"
                android:text="Tên Sản Phẩm"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:textColor="@color/pumpkin"
                android:layout_height="25dp"
                android:text="Gia"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txt_ingredient"
                android:layout_marginTop="55dp"
                android:layout_width="match_parent"
                android:textColor="@color/pumpkin"
                android:layout_height="25dp"
                android:text="thành phần"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txt_promotional"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:textColor="@color/pumpkin"
                android:layout_height="25dp"
                android:text="Đã giảm: 50%"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txt_review"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="Đánh giá"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/custom_text_view_review"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/rating_bar"
                android:layout_gravity="center_horizontal" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/canteloupe" />

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/canteloupe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_love"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/tym1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Thích"
                android:textColor="@color/canteloupe"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/binhluan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Bình luận"
                android:textColor="@color/canteloupe"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/chiase" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Chia sẻ"
                android:textColor="@color/canteloupe"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_size_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="9.999 lượt thích"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:autoSizeTextType="uniform"
                android:text="canada"
                android:textColor="@color/pumpkin" />

            <TextView
                android:id="@+id/txt_user_comment"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:autoSizeTextType="uniform"
                android:text="Bình luận"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_see_comment"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Xem tất cả bình luận"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sản phẩm liên quan:"
        android:textSize="25dp"
        android:textColor="@color/pumpkin"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/lv_related_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>