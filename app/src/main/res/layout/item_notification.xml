<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_notification"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_user_notification"
        android:id="@+id/txt_name_user_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_text_notification"
        android:layout_toRightOf="@+id/img_user_notification"
        android:layout_below="@+id/txt_name_user_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"/>

    <TextView
        android:id="@+id/txt_name_product_notification"
        android:layout_toRightOf="@+id/txt_text_notification"
        android:layout_below="@+id/txt_name_user_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="1"/>

    <TextView
        android:id="@+id/txt_text1_notification"
        android:layout_toRightOf="@+id/img_user_notification"
        android:layout_below="@+id/txt_name_product_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"/>

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/img_user_notification"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_red_dark"/>

</RelativeLayout>